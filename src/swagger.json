{
  "openapi": "3.0.0",
  "info": {
    "title": "Atlas Documentation",
    "description": "This is the documentation for Atlas API",
    "version": "1.0.0",
    "contact": {
      "email": "dih.yokoyama@gmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["User"],
        "summary": "Create a user",
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Username",
                  "email": "user@host.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "User Already Exists!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorUserExists"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["User"],
        "summary": "List all users",
        "description": "Only **admins** can access",
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": "true"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Users"
                }
              }
            }
          },
          "400": {
            "description": "Action not permitted",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorUnauthorized"
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorUserNotFound"
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["User"],
        "summary": "Get user profile",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": "true"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User1"
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorUserNotFound"
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": ["User"],
        "summary": "Give user admin permissions",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": "true"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User1"
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorUserNotFound"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Users": {
        "type": "array",
        "items": {
          "anyOf": [
            {
              "$ref": "#/components/schemas/User1"
            },
            {
              "$ref": "#/components/schemas/User2"
            }
          ]
        }
      },
      "User1": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "admin": {
            "type": "boolean"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "created_at": {
            "type": "date"
          },
          "updated_at": {
            "type": "date"
          }
        },
        "example": {
          "id": "def33c46-5447-40d9-b75f-968641bb088f",
          "admin": "true",
          "name": "test2",
          "email": "test2@test.com",
          "created_at": "2023-09-26T21:53:35.092Z",
          "updated_at": "2023-09-26T22:13:35.092Z"
        }
      },
      "User2": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "admin": {
            "type": "boolean"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "created_at": {
            "type": "date"
          },
          "updated_at": {
            "type": "date"
          }
        },
        "example": {
          "id": "bec1cb5b-6f9a-4fd6-8fc0-a05d26b2087e",
          "admin": "false",
          "name": "test",
          "email": "test@test.com",
          "created_at": "2023-09-26T21:50:58.710Z",
          "updated_at": "2023-09-26T21:50:58.710Z"
        }
      },
      "ErrorInvalidId": {
        "type": "object",
        "properties": {
          "error": "string"
        },
        "example": {
          "error": "Invalid user Id"
        }
      },
      "ErrorUserExists": {
        "type": "object",
        "properties": {
          "error": "string"
        },
        "example": {
          "error": "User Already Exists!"
        }
      },
      "ErrorUserNotFound": {
        "type": "object",
        "properties": {
          "error": "string"
        },
        "example": {
          "error": "User not found!"
        }
      },
      "ErrorUnauthorized": {
        "type": "object",
        "properties": {
          "error": "string"
        },
        "example": {
          "error": "Action not permitted"
        }
      }
    }
  } 
}
